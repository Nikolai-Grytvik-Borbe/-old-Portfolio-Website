---
import Hamburger from "../components/Hamburger.astro";
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Home</title>
	</head>
	<body>
		<div class="index-heading" id="cont">
			<h1>Nikolai Grytvik Borbe</h1>
			<Navigation />
			<Hamburger />
		</div>

		<h2 id="cont1">
			I'm an <span id="age"></span><br> year-old developer.
		</h2> 
		<script>
			let age = document.getElementById("age");
			let myAge = new Date("08/23/2002").getTime()
			
			setInterval(() => {
				let date = new Date()
				let dif = date.getTime() - myAge
				let convert = dif / 31556952000

				age.innerText = convert.toString().substring(0,12)
			}, 50)
		</script>

		<button class="index-contact-button" id="learn-more">
			<span>
				Learn more
			</span>
		</button>

		<script>
			let prop = document.getElementById("learn-more") 
			let title = document.getElementById("cont")
			let underTitle = document.getElementById("cont1")

			prop.onclick = function () {
				prop.style.transition = "0.8s";
				prop.classList.add("learn-more")
				title.style.transition = "0.8s"
				title.classList.add("fade")
				underTitle.style.transition = "0.8s"
				underTitle.classList.add("fade1")
				setTimeout(() => {
					location.href = "/about"
				}, 800)

			}

		</script>

	</body>


	<style>

		body {
			margin: 10%;
		}

		@media screen and (min-width: 636px) {
			body {
				margin: 5% 10%;
			}
		}

		.index-heading {
			display: flex;
			color: white;
			justify-content: space-between;
			align-items:flex-start;
		}

		h1 {
			margin: 0;
			font-size: 10vmin;
			font-weight: 300;
			max-width: 100px;
		}

		h2 {
			font-size: 3.5vmin;
			font-weight: 300;
			color: white;
		}

		p {
			max-width: 300px;
		}

		.index-contact-button {
			position: absolute;
			background: rgb(255,39,117);
        	background: linear-gradient(129deg, rgba(255,39,117,1) 0%, rgba(228,87,33,1) 90%, rgba(218,105,0,1) 100%);
			border: none;
			color: white;
			border-radius: 100px;
			font-size: 1rem;
			height: 55px;
			width: 200px;
			margin: auto;
			margin-left: auto;
			margin-right: auto; 
			left: 0;
			right: 0;
			text-align: center;
			margin-top: 65vh;
			display: block;
			letter-spacing: 0.4px;
			top: 0;
			left: 0;
		}

		.index-contact-button:hover {
			cursor: pointer;
		}

		.learn-more {
			margin: 0;
			padding: 0;
			position:absolute;
			margin-left: auto;
			margin-right: auto; 
			width: 100%;
			text-align: center;
			margin-top: 0;
			height: 8rem;
			border-radius: 0;
			font-size: 0;
			color: rgba(228,87,33,1);
		}

		.fade {
			color: #222127;
		}

		.fade1 {
			color: #222127;
		}

	</style>

	
</html>


