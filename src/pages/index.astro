---
import Hamburger from "../components/Hamburger.astro";
import Navigation from "../components/Navigation.astro";
import "../styles/global.css"
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Home</title>
	</head>
	<body>

		<div class="index-heading">
			<h1>Nikolai Grytvik Borbe</h1>
			<Navigation />
			<Hamburger />
		</div>

		<p>
			I'm an
			<b><span id="age"></span></b> <br>
			year-old lazy nobody with shit grades and no life aspiration.
		</p>

		<script>
			let age = document.getElementById("age");
			let myAge = new Date("08/23/2002").getTime()
			
			setInterval(() => {
				let date = new Date()
				let dif = date.getTime() - myAge
				let convert = dif / 31556952000

				age.innerText = convert.toString().substring(0,12)
			}, 50)

		</script>

		<button class="index-contact-button" onclick="window.location.href='https://www.youtube.com/watch?v=oEX4VX-ApVc';">
			Contact
		</button>

	</body>


	<style>

		body {
			margin: 10%;
		}

		@media screen and (min-width: 636px) {
			body {
				margin: 5% 10%;
			}
		}

		.index-heading {
			display: flex;
			justify-content: space-between;
			align-items:flex-start;
		}

		h1 {
			margin: 0;
			font-size: 10vmin;
			font-weight: 300;
			max-width: 100px;
		}

		p {
			max-width: 300px;
		}

		.index-contact-button {
			background: rgb(255,39,117);
        	background: linear-gradient(129deg, rgba(255,39,117,1) 0%, rgba(228,87,33,1) 90%, rgba(218,105,0,1) 100%);
			border: none;
			font-size: 4rem;
			color: white;
			border-radius: 100px;
			font-size: 1rem;
			height: 55px;
			width: 200px;
			margin: auto;
			margin-top: 150px; 
			display: block;
			letter-spacing: 0.4px;
			transition: 0.6s;
		}

		button:hover {
			cursor: pointer;
			letter-spacing: -0.8px;
			font-size: 0;
			color: orangered;
		}

	</style>

	
</html>


